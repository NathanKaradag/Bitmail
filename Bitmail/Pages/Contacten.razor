@page "/contacten"

<h3>Contacten</h3>

<div class="row">
    <div class="col">
        Lijst met Contacten<br />
        @foreach(var item in AllContacts)
        {
            <a role="button" @onclick="@(()=> OnContactClicked(item) )">@item.Email</a><br />
        }
        <button @onclick="OnNewContact">Nieuw contact aanmaken</button>
    </div>
    <div class="col">
        @if (IsNewContact)
        {
            <b>Nieuw Contact:</b>
            <EditForm Model="CurrentContact" OnSubmit="SaveContact">
                Title: <InputText @bind-Value="CurrentContact.Email"></InputText><br />
                <b>Organisaties:</b>
                <div style="height;200px; overflow-y:auto">
                    @foreach (var item in AllOrganisations)
                    {

                        @if (SelectedOrganisations != null && SelectedOrganisations.Contains(item.Id))
                        {
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                            </svg>
                        }

                        <a role="button" @onclick="@(()=> OnOrganisationItemSelected(item.Id) )">@item.Name</a><br />
                    }
                </div>
                <button type="submit">Opslaan</button>
            </EditForm>
        }
        else
        {
            @if (CurrentContact != null)
            {
                <b>@CurrentContact.Email</b>
                <b>@CurrentContact.Id</b>

                @if (CurrentContact.OrganisationContacts != null)
                {
                    <div style="height;200px; overflow-y:auto">
                        @foreach (var co in CurrentContact.OrganisationContacts)
                        {
                            <span> @co.Organisation.Name  </span><br />
                        }
                    </div>
                }
            }
            <button @onclick="RemoveContact"> Verwijderen </button>
        }
    </div>
</div>



