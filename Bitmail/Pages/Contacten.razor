@page "/contacten"
@using Bitmail.Components

<h3>Contacten</h3>

<div class="row">
    <div class="col">
        <input class="form-control col-3" @bind-value="SearchTerm" @bind-value:event="oninput" placeholder="Zoeken..." />
        <div class="vertical-menu">
            @foreach (var item in FilteredContacts)
            {
                <a role="button" @onclick="@(()=> OnContactClicked(item) )">@item.FirstName @item.LastName </a>
            }
        </div>
        <div class="content-nav-bottom">
            <button @onclick="OnNewContact" class="btn btn-primary">Nieuw contact aanmaken</button>
        </div>
    </div>
    <div class="col">
        @if (IsNewContact)
        {
            <h3>Nieuw contact</h3><br />
            <EditForm Model="CurrentContact" OnSubmit="SaveContact">
                <div class="align-content-lg-center row">
                    <label class="col-2 font-weight-bold">Voornaam: </label>
                    <InputText class="form-control col-3" @bind-Value="CurrentContact.FirstName" placeholder="Voornaam" />
                </div>
                <br />
                <div class="align-content-lg-center row">
                    <label class="col-2 font-weight-bold">Achternaam: </label>
                    <InputText class="form-control col-3" @bind-Value="CurrentContact.LastName" placeholder="Achternaam" />
                </div>
                <br />
                <div class="align-content-lg-center row">
                    <label class="col-2 font-weight-bold">E-mail: </label>
                    <InputText class="form-control col-3" @bind-Value="CurrentContact.Email" placeholder="E-mail adres" />
                </div>
                <br />
                <b>Organisatie(s):</b>
                <SearchComponent Placeholder="Zoeken..." OnInput="OnOrganisationSearch"></SearchComponent>
                <div style="height: 200px; overflow-y:auto">
                    @foreach (var item in Organisations)
                    {
                        <span style="cursor: pointer">
                            <a role="button" @onclick="@(() => OnOrganisationItemSelected(item.Id))">
                                @if (SelectedOrganisations != null && SelectedOrganisations.Contains(item.Id))
                                {
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                                    </svg>
                                }
                                else
                                {
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                    </svg>
                                }
                                <span class="pl-3">
                                    @item.Name
                                </span>
                            </a><br />
                        </span>
                    }
                </div>
                <br />
                <b>Label(s):</b>
                <SearchComponent Placeholder="Zoeken..." OnInput="OnTagSearch"></SearchComponent>
                <div style="height: 200px; overflow-y:auto">
                    @foreach (var item in Tags)
                    {
                        <span style="cursor: pointer">
                            <a role="button" @onclick="@(() => OnTagItemSelected(item.Id))">
                                @if (SelectedTags != null && SelectedTags.Contains(item.Id))
                                {
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                                    </svg>
                                }
                                else
                                {
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                    </svg>
                                }
                                <span class="pl-3">
                                    @item.Title
                                </span>
                            </a><br />
                        </span>
                    }
                </div>
                <br />
                <div class="content-nav-bottom">
                    <button type="submit" class="btn btn-primary">Opslaan</button>
                </div>
            </EditForm>
        }
        else
        {
            @if (CurrentContact.Email != null && !EditClicked)
            {
                <h3>Contact informatie</h3><br />
                <b>Voornaam:</b> @CurrentContact.FirstName<br /><br />
                <b>Achternaam:</b> @CurrentContact.LastName<br /><br />
                <b>Email:</b> @CurrentContact.Email<br /><br />
                <b>ID:</b> @CurrentContact.Id<br /><br />
                @if (CurrentContact.OrganisationContacts.Count != 0)
                {
                    <b>Organisaties: </b>
                    <div style="height: 100px; overflow-y:auto">
                        @foreach (var co in CurrentContact.OrganisationContacts)
                        {
                            <span> @co.Organisation.Name  </span><br />
                        }
                    </div>
                }
                @if (CurrentContact.ContactTags.Count != 0)
                {
                    <b>Labels: </b>
                    <div style="height: 100px; overflow-y:auto">
                        @foreach (var ct in CurrentContact.ContactTags)
                        {
                            <span> @ct.Tag.Title  </span><br />
                        }
                    </div>
                }
                <span class="content-nav-bottom">
                    <button @onclick="RemoveContact" class="btn btn-primary"> Verwijderen </button>
                </span>
                <span class="content-nav-bottom">
                    <button @onclick="OnEditClicked" class="btn btn-primary"> Wijzigen </button>
                </span>
            }
            @if (EditClicked)
            {
                <h3>Wijzig contact</h3><br />
                <EditForm Model="CurrentContact" OnSubmit="EditContact">
                    <div class="align-content-lg-center row">
                        <label class="col-2 font-weight-bold">Voornaam: </label>
                        <InputText class="form-control col-3" @bind-Value="CurrentContact.FirstName" placeholder="Voornaam" />
                    </div>
                    <br />
                    <div class="align-content-lg-center row">
                        <label class="col-2 font-weight-bold">Achternaam: </label>
                        <InputText class="form-control col-3" @bind-Value="CurrentContact.LastName" placeholder="Achternaam" />
                    </div>
                    <br />
                    <div class="align-content-lg-center row">
                        <label class="col-2 font-weight-bold">E-mail: </label>
                        <InputText class="form-control col-3" @bind-Value="CurrentContact.Email" placeholder="E-mail adres" />
                    </div>
                    <br />
                    <b>Organisatie(s):</b>
                    <SearchComponent Placeholder="Zoeken..." OnInput="OnOrganisationSearch"></SearchComponent>
                    <div style="height: 200px; overflow-y:auto">
                        @foreach (var item in Organisations)
                        {
                            <span style="cursor: pointer">
                                <a role="button" @onclick="@(() => OnOrganisationItemSelected(item.Id))">
                                    @if (SelectedOrganisations != null && SelectedOrganisations.Contains(item.Id))
                                    {
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        </svg>
                                    }
                                    <span class="pl-3">
                                        @item.Name
                                    </span>
                                </a><br />
                            </span>
                        }
                    </div>
                    <br />
                    <b>Label(s):</b>
                    <SearchComponent Placeholder="Zoeken..." OnInput="OnTagSearch"></SearchComponent>
                    <div style="height: 200px; overflow-y:auto">
                        @foreach (var item in Tags)
                        {
                            <span style="cursor: pointer">
                                <a role="button" @onclick="@(() => OnTagItemSelected(item.Id))">
                                    @if (SelectedTags != null && SelectedTags.Contains(item.Id))
                                    {
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        </svg>
                                    }
                                    <span class="pl-3">
                                        @item.Title
                                    </span>
                                </a><br />
                            </span>
                        }
                    </div>
                    <br />
                    <div class="content-nav-bottom">
                        <button type="submit" class="btn btn-primary">Opslaan</button>
                    </div>
                </EditForm>
            }
        }
    </div>
</div>



