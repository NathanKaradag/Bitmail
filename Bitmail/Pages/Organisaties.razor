@page "/organisaties"
@using Bitmail.Components
@using Bitmail.Components.Buttons;

<h3>Organisaties</h3>

<div class="row">
    <div class="col">
        <b>Lijst met organisaties</b><br />
        <SearchComponent Placeholder="Zoeken..." OnInput="OnOrganisationSearch"></SearchComponent>
        <div style="height: 200px; overflow-y:auto">
            @foreach (var item in Organisations)
            {
                <a style="cursor: pointer" class="list-item" role="button" @onclick="@(() => OnOrganisationClicked(item))">@item.Name</a>
            }
        </div> <br />
        <PrimaryButton OnClick="OnNewOrganisation">Nieuwe organisatie aanmaken</PrimaryButton>
    </div>
    <div class="col">
        @if (IsNewOrganisation)
        {
            <b>Nieuwe Organisatie:</b>
            <EditForm Model="CurrentOrganisation" OnValidSubmit="SaveOrganisation">
                <DataAnnotationsValidator />
                <b>Naam: </b><br /><InputText class="form-control editItemInput" placeholder="Naam" @bind-Value="CurrentOrganisation.Name"></InputText>
                <ValidationMessage For="@(() => CurrentOrganisation.Name)" /><br />

                <b>Beschrijving: </b><br /><InputTextArea class="form-control editItemInput" placeholder="Beschrijving" @bind-Value="CurrentOrganisation.Description"></InputTextArea>
                <ValidationMessage For="@(() => CurrentOrganisation.Description)" /><br />

                <b>Contacten:</b>
                <SearchComponent Placeholder="Zoeken..." OnInput="OnContactSearch"></SearchComponent>
                <div style="height: 200px; overflow-y:auto">
                    @foreach (var item in Contacts)
                    {
                        <span style="cursor: pointer">
                            <a role="button" @onclick="@(() => OnContactItemSelected(item.Id))">
                                @if (SelectedContacts != null && SelectedContacts.Contains(item.Id))
                                {
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                                    </svg>
                                }
                                else
                                {
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                    </svg>
                                }
                                <span class="pl-3">
                                    @item.Email
                                </span>
                            </a><br />
                        </span>
                    }
                </div>
                <br />
                <PrimaryButton Type="submit"> Opslaan </PrimaryButton>
                <DangerButton OnClick="@(() => OnOrganisationClicked(CurrentOrganisation))">Annuleer</DangerButton>
            </EditForm>
        }
        else
        {
            @if (CurrentOrganisation != null)
            {
                @if (CurrentOrganisation.OrganisationContacts != null && !EditClicked)
                {
                    <b>@CurrentOrganisation.Name</b>
                    <p>@CurrentOrganisation.Description</p>
                    <div style="height: 200px; overflow-y:auto">
                        <b>Bijbehorende contacten: </b><br>
                        @foreach (var oc in CurrentOrganisation.OrganisationContacts)
                        {
                            <span>- @oc.Contact.Email</span><br />
                        }
                    </div>
                    <WarningButton OnClick="OnEditClicked">Wijzig organisatie</WarningButton>
                    <DangerButton OnClick="RemoveOrganisation">Verwijder organisatie</DangerButton>
                }
                @if (EditClicked)
                {
                    <b>Wijzig Organisatie:</b>
                    <EditForm Model="CurrentOrganisation" OnValidSubmit="EditOrganisation">
                        <DataAnnotationsValidator />
                        <b>Naam: </b><br /><InputText class="form-control editItemInput" placeholder="Naam" @bind-Value="CurrentOrganisation.Name"></InputText>
                        <ValidationMessage For="@(() => CurrentOrganisation.Name)" /><br />

                        <b>Beschrijving: </b><br /><InputTextArea class="form-control editItemInput" placeholder="Beschrijving" @bind-Value="CurrentOrganisation.Description"></InputTextArea>
                        <ValidationMessage For="@(() => CurrentOrganisation.Description)" /><br />

                        <b>Contacten: </b>
                        <SearchComponent Placeholder="Zoeken..." OnInput="OnContactSearch"></SearchComponent>

                        <div style="height:200px; overflow-y:auto">
                            @foreach (var item in Contacts)
                            {
                                <span style="cursor: pointer">
                                    <a role="button" @onclick="@(() => OnContactItemSelected(item.Id))">
                                        @if (SelectedContacts != null && SelectedContacts.Contains(item.Id))
                                        {
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                                <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                                            </svg>
                                        }
                                        else
                                        {
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            </svg>
                                        }
                                        <span class="pl-3">
                                            @item.Email
                                        </span>
                                    </a><br />
                                </span>
                            }
                        </div>

                        <br /><PrimaryButton Type="submit">Opslaan</PrimaryButton>
                        <DangerButton OnClick="@(() => OnOrganisationClicked(CurrentOrganisation))">Annuleer</DangerButton>

                    </EditForm>
                }
            }
        }
    </div>
</div>