@page "/organisaties"

<h3>Test</h3>

<div class="row">
    <div class="col">
        Lijst met organisaties<br />
        @foreach (var item in AllOrganisations)
        {
            <a role="button" @onclick="@(()=> OnOrganisationClicked(item) )">@item.Name</a><br />
        }
        <button @onclick="OnNewOrganisation">Nieuwe organisatie aanmaken</button>
    </div>
    <div class="col">
        @if (IsNewOrganisation)
        {
            <b>Nieuwe Organisatie:</b>
            <EditForm Model="CurrentOrganisation" OnSubmit="SaveOrganisation">
                Name: <InputText @bind-Value="CurrentOrganisation.Name"></InputText> <br />
                Description: <InputText @bind-Value="CurrentOrganisation.Description"></InputText> <br />
                <b>Contacten:</b>
                <div style="height: 200px; overflow-y:auto">
                    @foreach (var item in AllContacts)
                    {
                        @if (SelectedContacts != null && SelectedContacts.Contains(item.Id))
                        {
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                            </svg>
                        }
                        <a role="button" @onclick="@(()=> { OnContactItemSelected(item.Id); })">@item.Email</a><br />
                    }
                </div>
                <button type="submit">Opslaan</button>
            </EditForm>
        }
        else
        {
            @if (CurrentOrganisation != null)
            {
                <b>@CurrentOrganisation.Name</b>
                <p>@CurrentOrganisation.Description</p>
                @if (CurrentOrganisation.OrganisationContacts != null)
                {
                    <div style="height: 200px; overflow-y:auto">
                        Bijbehorende contacten<br>
                        @foreach (var oc in CurrentOrganisation.OrganisationContacts)
                        {
                            <span>@oc.Contact.Email</span><br />
                        }
                    </div>
                }
                <button @onclick="DeleteOrganisation">Verwijder organisatie</button>
            }
        }
    </div>
</div>